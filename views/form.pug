extends layout 

block content  
  div#message-form-wrapper
    form#message-form.form(action='', method='POST')
      h3.form-title #{formTitle}
      textarea(id='text', name='text', placeholder='text', cols='30', rows='10', required)
      input(type='text', id='user', name='user', placeholder='author', required) 
      button.btn(type="submit") Add
  if errors
    ul.error-box
      each error in errors 
        li ! #{error.msg}
