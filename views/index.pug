extends layout

block content
  a(href='/new')
    button.btn.form-open-btn add message
  div#messages-wrapper
    each message in messages 
      div.message-box
        p.message-text #{message.text}
        div.message-box-footer
          p.message-user #{message.user}
          p.message-added #{moment(message.added).fromNow()}
